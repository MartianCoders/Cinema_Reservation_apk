<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        app:cardElevation="0dp"
        tools:ignore="MissingConstraints" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/ticket_background">

            <androidx.cardview.widget.CardView
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="25dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/imageview_for_movie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movie"
                    android:textColor="@color/purple_700"
                    android:fontFamily="sans-serif-black"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5sp">

                    <TextView
                        android:id="@+id/textview_movie_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comedy, Drama"
                        android:paddingStart="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:paddingStart="15dp"/>

                    <TextView
                        android:id="@+id/textview_movie_time_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="60min"
                        android:paddingStart="15dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textview_movie_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_marginTop="15sp"
                    android:textAlignment="center"
                    android:fontFamily="monospace"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="@color/purple_700">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_movie_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:gravity="center_horizontal"
                            android:fontFamily="monospace"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>